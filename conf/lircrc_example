		prog   = itv
		button = Ch-
		config = CH-
	        repeat = 0
	end
	begin
		prog   = itv
		button = Yellow
		config = ASPECT
	        repeat = 0
	end
	begin
		prog   = itv
		button = Menu/i
		config = SHOW_CHANNEL
	        repeat = 0
	end
	begin
		prog   = itv
		button = Back/Exit
		config = QUIT
	        repeat = 0
	end
end itv


##############
### IRADIO ###
##############

begin
        prog   = irexec
        button = Radio
        config = iradio -l &
        repeat = 0
        mode = iradio
end
begin iradio
        begin
                prog   = iradio
                button = 1
                config = CH1
                repeat = 0
        end
        begin
                prog   = iradio
                button = 2
                config = CH2
                repeat = 0
        end
	begin
		prog   = iradio
		button = 3
		config = CH3
		repeat = 0
	end
	begin
		prog   = iradio
		button = Ch+
		config = CH+
	        repeat = 0
	end
	begin
		prog   = iradio
		button = Ch-
		config = CH-
	        repeat = 0
	end
	begin
		prog   = iradio
		button = Menu/i
		config = SHOW_CHANNEL
	        repeat = 0
	end
        begin
                prog   = iradio
                button = Back/Exit
                config = QUIT
                repeat = 0
        end
end iradio
