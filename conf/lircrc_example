###########
### ITV ###
###########

begin
        prog   = irexec
        button = Videos
        config = itv -l &
        repeat = 0
	mode   = itv
end
begin itv
	begin
		prog   = itv
		button = 1
		config = CH1
	        repeat = 0
	end
	begin
